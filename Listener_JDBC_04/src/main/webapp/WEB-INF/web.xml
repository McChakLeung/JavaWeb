<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <listener>
    <listener-class>com.dgpalife.listener.ConnectionPoolListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>QuestionAddServlet</servlet-name>
    <servlet-class>com.dgpalife.servlet.QuestionAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuestionAddServlet</servlet-name>
    <url-pattern>/add.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>QuestionFindServlet</servlet-name>
    <servlet-class>com.dgpalife.servlet.QuestionFindServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>QuestionFindServlet</servlet-name>
    <url-pattern>/find.do</url-pattern>
  </servlet-mapping>
</web-app>
